<nav data-spy="affix" data-offset-top="60">
    <div class="navbar{{ inverse|default(false) ? ' navbar-inverse' : ' navbar-default' }}{{ fixedTop|default(false) ? ' navbar-fixed-top' : '' }}{{ staticTop|default(false) ? ' navbar-static-top' : '' }}">
        <div class="container">
            {% block header %}
                <div class="navbar-header">
                    {% block toggle %}
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target=".navbar-responsive-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    {% endblock %}
                    {% block brand %}
                        <a class="navbar-brand col-md-1"
                           href="{{ path(navbar.getOption('titleRoute')) }}"
                           alt="{{ navbar.getOption('title') }}"><img src="/bundles/dacorpcore/images/logo.png"></a>
                    {% endblock %}
                </div>
            {% endblock %}
            {% block menu_container %}
                <div class="collapse navbar-collapse navbar-responsive-collapse">
                    {% block menu %}

                        <div class="col-md-6">
                            {{ mopa_bootstrap_menu('DacorpCoreBundle:MenuBuilder:mainMenu') }}
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                {% if is_expr_granted('isAuthenticated()') %}
                                    {{ mopa_bootstrap_menu('DacorpCoreBundle:MenuBuilder:userMenu') }}
                                {% else %}
                                    {% include "DacorpCoreBundle:Form:navbar-login-form.html.twig" %}
                                {% endif %}
                            </div>

                        </div>
                        <div class="col-md-1">
                            {{ mopa_bootstrap_menu('DacorpCoreBundle:MenuBuilder:rightMenu') }}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>
</nav>
